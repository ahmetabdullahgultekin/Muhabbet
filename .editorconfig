root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{kt,kts}]
indent_size = 4
max_line_length = 120

[*.{yml,yaml}]
indent_size = 2

[*.{json}]
indent_size = 2

[*.{xml}]
indent_size = 4

[*.{sql}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Dockerfile]
indent_size = 4
